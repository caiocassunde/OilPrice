<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="7"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/gasolineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/result_background"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:elevation="@dimen/elevation"
        android:padding="@dimen/textview_padding"
        android:text="@string/gasolineText" />

    <TextView
        android:id="@+id/priceGasolineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_row="1"
        android:layout_column="0"/>

    <SeekBar
        android:id="@+id/gasolineSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:progress="499"
        android:max="999" />

    <TextView
        android:id="@+id/ethanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/result_background"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:elevation="@dimen/elevation"
        android:padding="@dimen/textview_padding"
        android:text="@string/ethanolText" />

    <TextView
        android:id="@+id/priceEthanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical" />

    <SeekBar
        android:id="@+id/ethanolSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:progress="499"
        android:max="999"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/hintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/hintTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/result_background"
            android:padding="@dimen/textview_padding"
            android:hint="@string/text"
            android:editable="false"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/result_background"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/oilImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_row="5"
        android:layout_column="0"
        android:foregroundGravity="center"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2" />
</GridLayout>