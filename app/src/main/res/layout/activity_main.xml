<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="6"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/gasolineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:background="@color/background_material_light"
        android:elevation="@dimen/elevation"
        android:padding="@dimen/textview_padding"
        android:text="@string/gasoline" />

    <TextView
        android:id="@+id/priceGasolineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/priceGasoline"/>

    <SeekBar
        android:id="@+id/gasolineSeekBar"
        android:layout_gravity="fill_horizontal"
        android:progress="500"
        android:max="1000"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height" />

    <TextView
        android:id="@+id/ethanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="@color/background_material_light"
        android:elevation="@dimen/elevation"
        android:padding="@dimen/textview_padding"
        android:text="@string/ethanol" />

    <TextView
        android:id="@+id/priceEthanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/priceEthanol" />

    <SeekBar
        android:id="@+id/ethanolSeekBar"
        android:layout_gravity="fill_horizontal"
        android:progress="500"
        android:max="1000"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height" />

</GridLayout>